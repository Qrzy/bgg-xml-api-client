{
  "name": "bgg-xml-api-client",
  "version": "0.1.9",
  "description": "A client for Boardgamegeek.com XML API (v1 and v2) that returns data as JS object.",
  "keywords": [
    "boardgamegeek",
    "boardgamegeek.com",
    "bgg",
    "bgg api",
    "xml api",
    "bgg json"
  ],
  "homepage": "https://github.com/Qrzy/bgg-xml-api-client#readme",
  "bugs": {
    "url": "https://github.com/Qrzy/bgg-xml-api-client/issues"
  },
  "license": "MIT",
  "author": {
    "name": "Marcin Kurkiewicz"
  },
  "contributors": [],
  "files": [
    "lib/**/*",
    "src/**/*",
    "README.md"
  ],
  "main": "lib/index.js",
  "browser": "lib/web/index.js",
  "module": "lib/module/index.js",
  "types": "lib/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/Qrzy/bgg-xml-api-client.git"
  },
  "scripts": {
    "test": "jest --config jest.config.json --coverage",
    "coveralls": "cat ./coverage/lcov.info | coveralls",
    "format": "prettier --write \"src/**/*.ts\"",
    "build": "yarn format && yarn lint && npx rollup -c",
    "lint": "eslint --ignore-path .gitignore .",
    "prepublishOnly": "npm test && yarn lint && yarn build",
    "preversion": "yarn lint",
    "version": "yarn format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "dependencies": {
    "axios": "0.25.0",
    "fast-xml-parser": "^3.19.0",
    "setimmediate": "^1.0.5"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "21.0.1",
    "@rollup/plugin-node-resolve": "13.1.3",
    "@types/jest": "27.4.0",
    "@typescript-eslint/eslint-plugin": "5.10.1",
    "@typescript-eslint/parser": "5.10.1",
    "coveralls": "^3.1.1",
    "eslint": "8.8.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "4.0.0",
    "husky": "7.0.4",
    "jest": "27.4.7",
    "lint-staged": "12.3.2",
    "prettier": "2.5.1",
    "rollup": "2.66.1",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "0.31.1",
    "ts-jest": "27.1.3",
    "typescript": "4.5.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
